<link rel="stylesheet" href="/css/userProfile.css">
    <h2>----- Profile Page -----</h2>

    <% if(profile_user.id == locals.user.id){ %>
        <!-- if user matches then show the form -->
        <form action="/users/update" method="POST">
            <input type="text" name="name" value="<%= profile_user.name %>">
            <input type="email" name="email" value="<%= profile_user.email %>">
            <button type="submit">
                Update
            </button>
        </form>
    <% }else{ %>
        <!-- else show only the profile info -->
        <h1> <%= profile_user.name %> </h1>
        <h5> <%= profile_user.email %> </h5>
    <% } %>
